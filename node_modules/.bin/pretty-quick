#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/home/zyk/personal/work/node_modules/.pnpm/pretty-quick@3.1.3_prettier@2.8.0/node_modules/pretty-quick/bin/node_modules:/home/zyk/personal/work/node_modules/.pnpm/pretty-quick@3.1.3_prettier@2.8.0/node_modules/pretty-quick/node_modules:/home/zyk/personal/work/node_modules/.pnpm/pretty-quick@3.1.3_prettier@2.8.0/node_modules:/home/zyk/personal/work/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/home/zyk/personal/work/node_modules/.pnpm/pretty-quick@3.1.3_prettier@2.8.0/node_modules/pretty-quick/bin/node_modules:/home/zyk/personal/work/node_modules/.pnpm/pretty-quick@3.1.3_prettier@2.8.0/node_modules/pretty-quick/node_modules:/home/zyk/personal/work/node_modules/.pnpm/pretty-quick@3.1.3_prettier@2.8.0/node_modules:/home/zyk/personal/work/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../pretty-quick/bin/pretty-quick.js" "$@"
else
  exec node  "$basedir/../pretty-quick/bin/pretty-quick.js" "$@"
fi
